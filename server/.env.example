
# Server
PORT=5000

# Firebase - Replace these with your Firebase project details
FIREBASE_API_KEY=your-api-key-here  # Get this from Firebase console > Project settings > General
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com  # Format: your-project-id.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id-here  # Find in Firebase console > Project settings
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com  # Format: your-project-id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id-here  # Find in Firebase console > Project settings
FIREBASE_APP_ID=your-app-id-here  # Find in Firebase console > Project settings
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com  # From your Firebase service account JSON file
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Private Key\n-----END PRIVATE KEY-----\n"  # From your Firebase service account JSON file
FIREBASE_DATABASE_URL=https://your-project-id.firebaseio.com  # May not be needed if not using Realtime Database

# Paystack - Get this from your Paystack dashboard
PAYSTACK_SECRET_KEY=your-paystack-secret-key-here  # Find in Paystack dashboard > Settings > API Keys & Webhooks
